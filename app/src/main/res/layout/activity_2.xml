<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starry_night_sky"
    tools:context=".Activity2">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nomePlaneta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagemPlaneta" />

    <ImageView
        android:id="@+id/imagemPlaneta"
        android:layout_width="119dp"
        android:layout_height="93dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/marte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewCuriosidade1"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@drawable/borda"
        android:padding="1dp"
        android:textSize="30sp"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomePlaneta"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewCuriosidade2"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/borda"
        android:textSize="30sp"
        android:padding="4dp"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCuriosidade1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewCuriosidade3"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/borda"
        android:textSize="30sp"
        android:padding="4dp"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCuriosidade2"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageVoltar"
        android:layout_width="68dp"
        android:layout_height="76dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/seta_para_a_esquerda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCuriosidade3"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>